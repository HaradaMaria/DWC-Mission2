<%= flash[:notice] %>

<h1>Editing Book</h1>


<body>
  <%= form_with model:@book do|f| %>
    <p>Title</p>
    <p><%= f.text_field :title %></p>
    
    <p>Body</p>
    <p><%= f.text_area :body %></p>
    
    <%= f.submit 'Update Book' %>
    <div class="link"><%= link_to "Show", book_path(@book.id) %></div>
    <div class="link">|</div>
    <div class="back"><%= link_to "Back", books_path %> </div>
  <% end %>
</body>
