<%= flash[:notice] %>

<h1>Books</h1>

<body>
   
    <% @book.each do |book| %>
    <table>
      <dif class="table-head">
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan=3> </th>
        </tr>
      </dif>
      
      <dif class="table-body">
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
        </tr>
      </dif>
    </table>
    <% end %>
    
   
   <%= form_with model:Book.new  do |f|%>
     <h2>New book</h2>
     <p>Title</p>
     <%= f.text_field :title %>
     <p>Body</p>
     <%= f.text_area :body %>
     
     <%= f.submit 'Create Book'%>
    <% end %>
   
</body>